<h1>I Am Ultron</h1>
<%= link_to 'New era', new_moon_path %>

<body style="background-color:lightcoral;">

</body>

<style>
table, th, td {
  border: 3px solid white;
  border-radius: 15px;
  background-color:steelblue;
}
td {
  text-align: center;
}
h1{
	background-color: darkgreen;
	color: ghostwhite;
}
</style>

<table style="width:40%">
	<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"> Options </th> 
	</tr>
	
		<% @moons.each do |m|%>
			<% if m.user == current_user %>

				<tr>
						<td><%= m.title %></td>
						<td><%= m.body %></td>
						<td><%= link_to 'Show', moon_path(m) %></td>
					  <td><%= link_to 'Edit', edit_moon_path(m) %></td>
					  <td><%= link_to 'Delete', moon_path(m), method: :delete, data:{confirm:"Really?"} %></td>
			  </tr>
		<% end %>
	<% end %>
</table>






